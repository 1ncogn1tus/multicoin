<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="431.0" prefWidth="498.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="in.multico.controller.AddExchangeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <bottom>
        <HBox alignment="CENTER" spacing="40">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
           <children>
               <Button onAction="#back" text="%back" />
               <Button text="%confirm" onAction="#save"/>
           </children>
        </HBox>
    </bottom>
   <top>
      <Label text="%exchange_setting" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="%ex_instruction1" wrapText="true" />
            <TextField fx:id="key" promptText="API key">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <TextField fx:id="secret" promptText="Secret">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label text="%ex_instruction2" wrapText="true" />
             <PasswordField fx:id="pass" promptText="%hint_pass">
                 <VBox.margin>
                     <Insets />
                 </VBox.margin>
             </PasswordField>
         </children>
      </VBox>
   </center>


</BorderPane>
