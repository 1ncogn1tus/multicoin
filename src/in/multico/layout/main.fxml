<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="in.multico.controller.MainController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" BorderPane.alignment="CENTER">
         <padding>
             <Insets left="10.0" right="10.0" />
         </padding>
          <children>
            <ImageView fx:id="coinIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </ImageView>
            <Label fx:id="coinAmt" text="0.00 BTC">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
            <Label fx:id="coinAddr" text="1NDBbxL6jrF8fEjsCP36baNiQGJ2C3rcJE">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
             <Button mnemonicParsing="false" text="Скопировать" onAction="#copyAddr">
                 <HBox.margin>
                     <Insets left="5.0" right="5.0" />
                 </HBox.margin>
             </Button>
            <Button mnemonicParsing="false" text="Отправить" onAction="#sendCoin">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
             <Button mnemonicParsing="false" text="Получить" onAction="#invoice">
                 <HBox.margin>
                     <Insets left="5.0" right="5.0" />
                 </HBox.margin>
             </Button>
             <Button mnemonicParsing="false" text="Обменять" onAction="#exchange">
                 <HBox.margin>
                     <Insets left="5.0" right="5.0" />
                 </HBox.margin>
             </Button>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox prefHeight="41.0" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
        <SplitPane dividerPositions="0.2" nodeOrientation="LEFT_TO_RIGHT" prefHeight="206.0" prefWidth="600.0">
          <items>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <ListView fx:id="coinsList" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <AnchorPane minHeight="0.0" minWidth="0.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="158.0" prefWidth="116.0" />
          </items>
        </SplitPane>
   </center>
</BorderPane>
