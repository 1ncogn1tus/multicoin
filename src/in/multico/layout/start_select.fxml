<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="in.multico.controller.StartSelectController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox alignment="CENTER" spacing="10">
        <padding>
            <Insets right="20.0" left="20.0" bottom="20.0" top="20.0"/>
        </padding>
        <Label text="%wallet_not_found" />
        <Button text="%create_new" onAction="#createWallet" />
        <Button text="%import" onAction="#importWallet" />
    </VBox>

</GridPane>