<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="in.multico.controller.ShowMnemonicController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets right="20.0" left="20.0" bottom="20.0" top="20.0"/>
    </padding>
    <VBox GridPane.columnSpan="4" GridPane.rowIndex="0">
        <padding>
            <Insets bottom="30" left="10" right="10"/>
        </padding>
        <Label text="Запишите слова и сохраните в надёжном месте"/>
    </VBox>

    <Label style="-fx-font-size: 18px" fx:id="w1" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label style="-fx-font-size: 18px" fx:id="w2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label style="-fx-font-size: 18px" fx:id="w3" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Label style="-fx-font-size: 18px" fx:id="w4" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Label style="-fx-font-size: 18px" fx:id="w5" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label style="-fx-font-size: 18px" fx:id="w6" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label style="-fx-font-size: 18px" fx:id="w7" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Label style="-fx-font-size: 18px" fx:id="w8" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Label style="-fx-font-size: 18px" fx:id="w9" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label style="-fx-font-size: 18px" fx:id="w10" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label style="-fx-font-size: 18px" fx:id="w11" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Label style="-fx-font-size: 18px" fx:id="w12" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <Label style="-fx-font-size: 18px" fx:id="w13" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label style="-fx-font-size: 18px" fx:id="w14" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label style="-fx-font-size: 18px" fx:id="w15" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Label style="-fx-font-size: 18px" fx:id="w16" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

    <Label style="-fx-font-size: 18px" fx:id="w17" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label style="-fx-font-size: 18px" fx:id="w18" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <Button onAction="#next" text="Далее" GridPane.columnIndex="3" GridPane.rowIndex="6" />
</GridPane>